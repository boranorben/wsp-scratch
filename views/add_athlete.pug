extends layout

block content
    h1 #{title}
    form(method='POST', action='/athletes/add')
        #form-group
            label Athlete's name:
                input.form-control(name='name', type='text')
        #form-group
            label Athlete's club name:
                input.form-control(name='clubName', type='text')
        #form-group
            label Body:
                textarea.form-control(name='body')
        br
        input.btn.btn-primary(type='submit', value='Submit')
